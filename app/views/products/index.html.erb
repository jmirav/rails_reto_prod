<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Productos</h1>
      <%= button_to "Nuevo Producto", new_product_path, :class => "btn btn-primary float-right", :method => :get, :type => "button" %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Precio</th>
            <th scope="col">Categorías</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.name %></td>
              <td><%= product.price %></td>
              <td>
                <% cats = product.categories.ids %>
                <% cats.each do |c| %>
                  <%= @categories.find_by(id: c).name %>
                <% end %>
              </td>
              <td>
                <%= link_to "Editar", edit_product_path(product) %>
                <%= link_to "Eliminar", product, method: :delete, data: { confirm: "¿Estás seguro de eliminar este producto?" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
